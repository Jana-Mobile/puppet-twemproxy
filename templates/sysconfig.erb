# Set defaults for nutcracker instance <%= @name %>
<% if @osfamily.downcase == 'redhat' %>
USER="<%= @twemproxy_user %>"
OPTIONS="-d -c /etc/nutcracker/<%= @instance_name %>.yml"
<% elsif @osfamily.downcase == 'debian' %>
# Defined in init script or else a second instance causes update-rc.d to fail.
#DESC=<%= @instance_name %>
#NAME=<%= @instance_name %>

USER=<%= @twemproxy_user %>
GROUP=<%= @twemproxy_group %>
CONFFILE="/etc/nutcracker/<%= @instance_name %>.yml"
LOGFILE="<%= @log_dir %>/<%= @instance_name %>.log"
DAEMON="<%= @daemon_path %>"
PIDFILE=<%= @pid_dir %>/<%= @instance_name %>.pid
STATSPORT=<%= @statsport %>
DAEMON_ARGS="-c $CONFFILE -o $LOGFILE -p $PIDFILE -s $STATSPORT -v 11 -m 2048 -d"
SCRIPTNAME=/etc/init.d/<%= @instance_name %>
<% end %>